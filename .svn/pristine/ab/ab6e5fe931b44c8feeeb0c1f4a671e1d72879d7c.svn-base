// temporary fix for bootstrap 4 beta btn color issue
.btn-secondary {
  background-color: white;
  color: var(--bs-input-color);
}
.arrowhide::after {
    display: none;
}
:host {
    ::ng-deep {
        em {
        font-weight: bold;
        }

       

    }
}
.scroll-container {
    height: calc(500px - 165px);
    margin: 0 0 15px;
    overflow-x: hidden;
    overflow-y: scroll;
    padding: 5px 0;

    @media screen and (max-width: map-get($grid-breakpoints, sm)) {
        height: 500px;
    }

    .recent-item-list {
        &:last-child {
            margin-bottom: 0 !important;
        }
    }
}

// //////////////////
/* Works on Firefox */
* {
    scrollbar-width: thin;
    scrollbar-color: var(--ds-primary-color);
}

/* Works on Chrome, Edge, and Safari */
*::-webkit-scrollbar {
    width: 10px;
}

*::-webkit-scrollbar-track {
    background: white;
}

*::-webkit-scrollbar-thumb {
    background-color: var(--ds-secondary-color);
    border-radius: 20px;
    border: 2px solid white;
}
.search-wrapper {
    margin-bottom: 60px;
    position: relative;
}

////////////////////////
.list-group {
    list-style: none;
}

.suggestion-header {
    color: #fff;
    font-size: 12px;
    text-transform: uppercase;
    background-color:  var(--ds-primary-color);
    font-size: 15px;
        text-align: center;
}

.suggestion {
    margin-left: 5px;
    color: #fff;
    word-break: break-word;
    border-bottom: 1px solid var(--ds-primary-color);
}

.search-query-suggestion {
    width: 100%;
    position: absolute;
    background: #FFFFFF;
    box-shadow: 0 6px 12px rgb(0 0 0 / 18%);
    z-index: 2;
}

.search-query-suggestion_searchpage {
    width: 100%;
    position: absolute;
    background: #FFFFFF;
    box-shadow: 0 6px 12px rgb(0 0 0 / 18%);
    z-index: 2;
}



::ng-deep {
    .repository-searchBox {
        .input-group {
            height: 50px;
            margin: 0;
        
            .form-control {
                border-radius: 0;
                &:focus {
                    box-shadow: none;
                }
                &::placeholder {
                    font-size: 14px;
                }
            }

            .dropdown {
                button {
                    font-size: inherit;
                    text-align: left;
                }
            }
            select {
                border: 0;
                font-size: 14px;
            }

            @media screen and (max-width: map-get($grid-breakpoints, sm)) {
                height: auto;

                .v-line {
                    display: none;
                }
                
                input.borderRight-0,
                button.borderRight-0 {
                    border-right-width: 1px !important;
                }
            }
            @media screen and (min-width: map-get($grid-breakpoints, sm))
             and (max-width: 767px) 
             and (orientation :landscape) {
                justify-content: center;
                margin-top: 30px;
            }
            .btn {    
                border-color: var(--ds-primary-color);
                border-radius: 0;
                box-shadow: none !important;
                border-width: 0 1px;
                height: 100%;
                outline: none;
      
                @media screen and (max-width: map-get($grid-breakpoints, sm)) {
                    border: 1px solid #bbb;
                    border-radius: 0 !important;
                    min-height: 40px;
                    text-align: left;
                    width: 100%;
                }
      
                &:focus {
                    box-shadow: none;
                }
            }
            .btn.scope-button {
                background-color: white;
                &:hover {
                    color: var(--ds-primary-color);
                }
            }
            .input-child{
                border: 1px solid var(--ds-primary-color);
                font-size: 14px;
                max-height: 50px;
                min-height: 50px;
                text-align: left;
                padding: 0 25px 0 15px;

                &:first-child  {
                    border-radius: 25px 0 0 25px;
                    @media screen and (max-width: map-get($grid-breakpoints, sm)) {
                        border-radius: 0;
                    }
        
                    &:focus {
                        box-shadow: none;
                        z-index: 0;
                    }
                }   
                &:last-child {
                    border-radius: 0 25px 25px 0;
                    @media screen and (max-width: map-get($grid-breakpoints, sm)) {
                        border-radius: 0;
                    }
                }
                
            }
        }
    }
    .search-bg-box {
        .btn.scope-button {
            border-color: var(--ds-primary-color);
            border-bottom-width: 1px;
            border-left-width: 1px;
            border-top-width: 1px;
        }
        input.form-control  {
            border-color: var(--ds-primary-color) !important;
            border-width: 1px;
        }

    }

    .tabViewContents {
        .filterResult-container {
            padding: 0;
            .row-with-sidebar {
                padding-left: 0 !important;
                padding-right: 0 !important;
                .repository-searchBox {
                    .input-group {
                        justify-content: center;
                        input {
                            border-bottom-left-radius: 25px;
                            border-top-left-radius: 25px;
                            border-width: 1px;
                        }
                    }
                }
            }
        }
            
        .filterResult-container .resultCol
        .search-result-container {
            @media screen and (min-width: map-get($grid-breakpoints, sm))
            and (max-width: 767px) 
            and (orientation :landscape) {
                padding: 15px !important;
            }
            @media screen and (max-width: map-get($grid-breakpoints, sm)) {
                padding: 15px !important;
            }
            .card {
                .card-body {
                    .clamp-default-3 {
                        .content {
                            line-height: 20px;
                            max-height: 65px;
                            height: auto;
                        }
                    }
                    .clamp-default-1 {
                        .content {
                            line-height: 18px;
                            max-height: 50px;
                            height: auto;
                        }
                    }
                    .viewmore-btn {
                        display: none !important;
                    }
                }
            }
            .data-card {
                margin: 0 5px !important;
            }
        }
    }
    .search-page {
        .searchFilterBox {
            .input-group {
                padding: 0 15px;
            }
        }
        
        .search-result-container {
            .card {
                .card-body {
                    .clamp-default-3 {
                        .content {
                            line-height: 20px;
                            max-height: 65px;
                            height: auto;
                        }
                    }
                    .clamp-default-1 {
                        .content {
                            line-height: 18px;
                            max-height: 50px;
                            height: auto;
                        }
                    }
                    .viewmore-btn {
                        display: none !important;
                    }
                }
            }
            .data-card {
                margin: 0 5px !important;
            }
        }
    }
}
