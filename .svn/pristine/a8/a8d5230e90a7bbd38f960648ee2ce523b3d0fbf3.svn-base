<div [ngClass]="isCurrent() ? 'primary' : 'default'" *ngIf="!!parentTitle">
  <div [ngClass]="isCurrent() ? 'text-light' : 'text-body'" [innerHTML]="parentTitle">
  </div>
</div>
<div [ngClass]="isCurrent() ? 'primary' : 'default'" *ngIf="!parentTitle">
  <div [ngClass]="isCurrent() ? 'text-light' : 'text-body'"
    [innerHTML]="(parentTitle$ && parentTitle$ | async) ? (parentTitle$ | async) : ('home.breadcrumbs' | translate)">
  </div>
</div>
<div [ngClass]="isCurrent() ? 'primary' : 'default'">
  <div class="font-weight-bold" [ngClass]="isCurrent() ? 'text-light' : 'text-primary'" [innerHTML]="dsoTitle"></div>
</div>
<div *ngIf="description" [ngClass]="isCurrent() ? 'primary' : 'default'">
  <div class="text-secondary" [ngClass]="isCurrent() ? 'text-light' : 'text-secondary'" [innerHTML]="description"></div>
</div>