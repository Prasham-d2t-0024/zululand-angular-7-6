<ng-container *ngVar="(breadcrumbs$ | async) as breadcrumbs">
    <div *ngIf="(showBreadcrumbs$ | async)" class="align-items-center m-0 breadcrumb">
        <div  style="padding-left: 15px;">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb" class="nav-breadcrumb p-0">
                        <ol class="d-flex align-items-center m-0 p-0 ellipsify">
                            <ng-container
                                *ngTemplateOutlet="breadcrumbs?.length > 0 ? breadcrumb : activeBreadcrumb; context: {text: 'home.breadcrumbs', url: '/'}"></ng-container>
                            <ng-container *ngFor="let bc of breadcrumbs; let last = last;">
                            <ng-container
                                    *ngTemplateOutlet="!last ? breadcrumb : activeBreadcrumb; context: bc"></ng-container>
                            </ng-container>
                        </ol>
                    </nav>
                    <ng-template #activeBreadcrumb let-text="text">
                        <li class="breadcrumb-item   active" aria-current="page">
                            <div class="breadcrumb-item-limiter">
                                <div class="text-truncate">{{text | translate}}</div>
                            </div>
                        </li>
                    </ng-template>
                    <ng-template #breadcrumb let-text="text" let-url="url">
                        <li class="breadcrumb-item">
                            <div class="breadcrumb-item-limiter">
                                <a [routerLink]="url" class="text-truncate"
                                [ngbTooltip]="text | translate" placement="bottom">{{text | translate}}</a>
                            </div>
                        </li>
                    </ng-template>
                </div>
            </div>
        </div>
    </div>
</ng-container>