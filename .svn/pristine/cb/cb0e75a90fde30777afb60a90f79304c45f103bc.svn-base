.limit-width {
  max-width: var(--ds-thumbnail-max-width);
}
.mywidth{
  max-width: 100%;
  height: auto;
}
.loader {
  background: rgb(234 234 234 / 50%);
  inset: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: calc(100% - 5px);
  height: 100%;
}
.outer {  // .outer/.inner generated ~ https://ratiobuddy.com/
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: calc((297 / 210) * 100%);  // A4 ratio
  }
  > .inner {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    > .thumbnail-placeholder {
      background: var(--ds-thumbnail-placeholder-background);
      border: var(--ds-thumbnail-placeholder-border);
      color: var(--ds-thumbnail-placeholder-color);
      font-weight: bold;
    }
    > .centered {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
  }
}
::ng-ddep .data-card, .data-card {
  background-color: white;
  // box-shadow: 0px 1px 5px 0 #ccc;
  min-height: 150px;
  &:hover {
      box-shadow: 0px 5px 5px 0 #ccc;
  }
  @media screen and (max-width: map-get($grid-breakpoints, sm)) {
    .img-col {
      margin-bottom: 5px;
    }
  }
  .thumbnail-img {
    justify-content: flex-start;
  }
}