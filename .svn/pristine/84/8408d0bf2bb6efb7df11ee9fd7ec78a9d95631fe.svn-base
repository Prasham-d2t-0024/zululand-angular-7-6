@import '../../../../../styles/variables.scss';
bg-light-background {
    background-color: #f8f8f8 !important;
        ;
}
.bottem-count-text ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0;
    margin: 0;
}

.element {
    cursor: pointer;
    color: var(--ds-primary-color);
    /* Default color */
    transition: color 0.3s;
    /* Add a smooth transition effect */
}

.element:hover {
    color: var(--ds-primary-color);
    /* New color on hover (red in this example) */
}

.bottem-count-text {
    ul {
        li {
            text-decoration: none;
            list-style: none;
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: center;
            padding: 10px;

            img {
                width: 28px !important;
                margin-right: 4px;
            }

            span {
                font-size: 14px;
                font-weight: 600;
                color: #978f8f;
                margin-left: 5%;
            }
        }
    }
}

.font-wight-info {
    font-weight: 600;
}

.subBtn {
    border-radius: 20px;
    position: relative;
    text-align: left;

    .ellipsify {
        max-width: calc(100% - 35px);
    }

    i {
        font-size: 36px;
        position: absolute;
        right: 2px;
        top: 1px;
    }
}

/* Works on Firefox */
* {
    scrollbar-width: thin;
    scrollbar-color: var(--ds-primary-color);
}

/* Works on Chrome, Edge, and Safari */
*::-webkit-scrollbar {
    width: 10px;
}

*::-webkit-scrollbar-track {
    background: white;
}

*::-webkit-scrollbar-thumb {
    background-color: var(--ds-secondary-color);
    border-radius: 20px;
    border: 2px solid white;
}

.slash:after {
    content: "\000A";
    white-space: pre;
}

.arrowhide::after {
    display: none;
}

.sharbutton {
    color: #fff;
    font-size: 14px !important;
    height: 22px;
    width: 22px;
    border-radius: 50%;
    padding-top: 4px;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.facebookshare {
    background-color: #3b5998;
}

.twittershare {
    background-color: #55acee;
}

.wahtsupshare {
    background-color: #25D366;
}

.linkshare {
    background-color: #0077b5;
}

.bar-container {

    background-color: #f1f1f1;
    text-align: center;
    color: white;
}

.viwerBreakupRow {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.middle {
    background-color: #f1f1f1;
}

