.boxshadow {
    box-shadow: 0 2px 5px #bbb;
}

::ng-deep {
    .card-grid-row {
        .pagination-masked {
            padding: 10px 20px;
        }

        .pagination {
            margin: 0;
        }
    }

    .item-detail-page {
        .scroll-container {
            height: auto !important;
        }
    }

    .itemdetail-footer-actions {
        @media (max-width: 768px) {
            .footeractions-left {
                .border-right {
                    border-width: 0 !important;
                }
            }
        }

        @media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
            .action-row {
                flex-flow: column;

                .footeractions-left,
                .footeractions-right {
                    display: flex;
                    max-width: 100%;

                    .flex-action {
                        justify-content: center;
                        width: 100%;
                    }
                }

                .footeractions-right {
                    .flex-action {
                        margin-bottom: 15px !important;
                    }
                }
            }
        }
    }

    .viewbtn-group {
        .btn {
            border: 1px solid black;
            background-color: #dedede;
            color: #000;
            transition: all .5s;

            &.active {
                background-color: var(--ds-primary-color) !important;
                border-color: var(--ds-primary-color) !important;
                color: white;
            }

            &:not(.disabled):focus,
            &:focus {
                box-shadow: none;
            }

            &:not(.active) {
                &:hover {
                    background-color: #1a697a;
                    color: white;
                }
            }
        }
    }
}

.main-div {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}

.key {
    font-weight: bold;
}

.value {
    flex-grow: 1;
    margin-left: 10px;
}